---
import about from '../data/about.json';
const { about, contact, clients, recognition } = about;
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Plains of Yonder</title>
</head>
<body class="bg-gray-100 text-gray-900">

  <!-- Hero Section -->
  <header class="relative">
    <img src={hero.image} alt="Hero Image" class="w-full h-[60vh] object-cover">
    <div class="absolute top-0 left-0 p-8">
      <h1 class="text-white text-4xl font-bold">{hero.title}</h1>
    </div>
    <nav class="absolute top-0 right-0 p-8">
      <ul class="flex space-x-6 text-white text-xl">
        {hero.navLinks.map(link => (
          <li><a href={link.url} class="hover:underline">{link.name}</a></li>
        ))}
      </ul>
    </nav>
  </header>

  <!-- About Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-6 md:px-0">
      <h2 class="text-2xl font-bold mb-4">{about.title}</h2>
      {about.description.map(paragraph => (
        <p class="text-lg mb-4">{paragraph}</p>
      ))}
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-16 px-6 md:px-0">
      <div>
        <h2 class="text-2xl font-bold mb-4">{contact.title}</h2>
        <p class="font-bold">{contact.newBusiness.title}</p>
        <p>{contact.newBusiness.name}</p>
        <p class="text-blue-500"><a href={`mailto:${contact.newBusiness.email}`}>{contact.newBusiness.email}</a></p>
        <p class="font-bold mt-4">{contact.generalInquiries.title}</p>
        <p class="text-blue-500"><a href={`mailto:${contact.generalInquiries.email}`}>{contact.generalInquiries.email}</a></p>
      </div>
    </div>
  </section>

  <!-- Clients Section -->
  <section class="py-16 bg-gray-200">
    <div class="container mx-auto px-6 md:px-0">
      <h2 class="text-2xl font-bold mb-8 text-center">CLIENTS</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        {clients.map(client => (
          <p>{client}</p>
        ))}
      </div>
    </div>
  </section>

  <!-- Recognition Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-6 md:px-0">
      <h2 class="text-2xl font-bold mb-8 text-center">RECOGNITION</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        {recognition.map(item => (
          <div>
            <h3 class="font-bold">{item.title}</h3>
            <p>{item.details}</p>
            <p>{item.project}</p>
            <p>{item.organization || ''}</p>
            <p>{item.date}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

</body>
</html>